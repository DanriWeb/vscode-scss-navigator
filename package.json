{
  "name": "vscode-scss-navigator",
  "displayName": "SCSS Navigator",
  "description": "Advanced SCSS/SASS navigation with support for tsconfig paths, aliases, variables, mixins, and monorepos.",
  "version": "1.0.2",
  "publisher": "DanriWeb",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/DanriWeb/vscode-scss-navigator.git"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "scss",
    "sass",
    "css",
    "navigation",
    "peek",
    "definition",
    "alias",
    "tsconfig",
    "monorepo"
  ],
  "activationEvents": [
    "onLanguage:scss",
    "onLanguage:sass"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "SCSS Navigator",
      "properties": {
        "scssNavigator.repositoryPaths": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string",
                "description": "Path to repository directory or tsconfig.json file"
              },
              {
                "type": "object",
                "properties": {
                  "root": {
                    "type": "string",
                    "description": "Path to repository root directory"
                  },
                  "tsconfig": {
                    "type": "string",
                    "description": "Path to tsconfig.json file (optional)"
                  }
                },
                "required": [
                  "root"
                ],
                "additionalProperties": false
              }
            ]
          },
          "default": [],
          "markdownDescription": "Repository paths in a monorepo. Supports strings or objects.\n\n**Examples:**\n- `[]` — auto-search in workspace root (default)\n- `[\"./packages/frontend\"]` — directory path\n- `[{\"root\": \"./packages/backend\", \"tsconfig\": \"./config/tsconfig.json\"}]` — object with explicit paths\n- Mixed usage is supported"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  }
}
